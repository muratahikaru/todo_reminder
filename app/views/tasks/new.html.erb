<%= render partial: "layouts/sidebar" %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "タスク", user_tasks_path(@user) %></li>
            <li class="breadcrumb-item active">新規作成</li>
          </ol>
        </div><!-- /.col -->
        <div class="col-sm-6">
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <div class="content">
    <div class="card">
      <!-- form start -->
      <%= form_with(model: [@user ,@task], lacal: true) do |f| %>
        <div class="card-body">
          <div class="form-group row">
            <%= f.label :タスク名, class: "col-sm-2 col-form-label fw-bold" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :期限, class: "col-sm-2 col-form-label fw-bold" %>
            <div class="col-sm-10">
              <%= f.datetime_field :deadline, class: "form-control" %>
            </div>
          </div>
          　      </div>
        <!-- /.card-body -->
        <div class="card-footer">
          <%= f.submit "保存",class: "btn btn-info" %>
          <%= link_to "キャンセル", user_tasks_path(@user) , class: 'btn btn-default' %>
        </div>
      <% end %>
      <!-- /.card-footer -->
    </div>
  </div>
  <!-- /.content -->
</div>
<%= render partial: "layouts/footer" %>
