<%= render partial: "layouts/sidebar" %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header"></div>
  <!-- /.content-header -->

  <!-- Main content -->
  <div class="content">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <!-- /.card-header -->
          <div class="card-header adjust">
            <div class="card-tools">
              <div class="navbar-nav ml-auto">
                <%= link_to "追加", new_user_path, class: "btn btn-block btn-default" %>
              </div>
            </div>
          </div>
          <div class="card-body table-responsive p-0">
            <div class="border box rounded">
              <table class="table table-hover text-nowrap none-margin">
                <thead>
                <tr>
                  <th>名前</th>
                  <th>email</th>
                  <th>権限</th>
                </tr>
                </thead>
                <tbody>
                <% @users.each do |user| %>
                  <tr class="clickable-row" data-href="/users/<%= user.id %>">
                    <td class="staff_name"><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= check_admin(user) %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%= render partial: "layouts/footer" %>

